<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/demacia_gold"
        android:padding="2dp"
        android:id="@+id/ContainerFrame">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/demacia_blue"
            android:padding="4dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/imageViewIcon"
                android:src="@drawable/icon_default"
                android:nestedScrollingEnabled="false"
                android:scaleType="fitXY" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="@string/buttonSelect"
                android:id="@+id/buttonChoose"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:background="@color/demacia_button_blue" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:id="@+id/textViewName"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imageViewIcon"
                android:layout_toEndOf="@+id/imageViewIcon"
                android:layout_toStartOf="@+id/buttonChoose"
                android:textColor="#000000"
                android:textAlignment="center"
                android:singleLine="true"
                android:gravity="center"
                android:typeface="monospace"
                android:textSize="16dp"
                android:textStyle="bold"
                android:text="@string/defaultName"
                android:background="#ffffff"
                android:layout_alignParentEnd="false"
                android:layout_alignParentStart="false"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp" />

        </RelativeLayout>

    </FrameLayout>
</RelativeLayout>